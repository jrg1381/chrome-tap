{
    "manifest_version" : 2,
    "name" : "Chrome TAP",
    "description" : "Parse Test Anything Protocol in a web page",
    "version" : "1.0",

    "background" : {
	"persistent" : false,
	"scripts" : ["bg.js"]
    },
    
    "content_scripts" : [
	{
	    "css" : ["tap.css"],
	    "js" : ["node_modules/jquery/dist/jquery.min.js", "content-script.js"],
	    "matches": ["*://*/*.txt", "*://*/*text"]
	}
    ],
    
    "browser_action" : {
	"default_icon" : "icon.png",
	"default_popup" : "",
	"default_title" : "Parse TAP data"
    },
    "permissions" : [
	"activeTab",
	"https://ajax.googleapis.com/"
    ]
}
