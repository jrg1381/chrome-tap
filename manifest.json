{
    "manifest_version" : 2,
    "name" : "Chrome TAP",
    "description" : "Parse Test Anything Protocol in a web page",
    "version" : "1.0",

    "content_scripts" : [
	{
	    "js" : ["parse-tap.js"],
	    "matches": ["https://www.redchess.net/Stats"]
	}
    ],
    
    "browser_action" : {
	"default_icon" : "icon.png",
	"default_popup" : "popup.html",
	"default_title" : "Parse TAP data"
    },
    "permissions" : [
	"activeTab",
	"https://ajax.googleapis.com/"
    ]
}
